---
import Acroventus from "./Acroventus.astro";
import ExperienceBackground from "../ExperienceBackground.astro";
import Tag from "../Tag.astro";
---

<article
  class="col-span-12 lg:col-span-4 flex flex-col gap-4 rounded-3xl relative overflow-hidden card grow z-50"
>
  <Tag title="Experiencia" theme="light" />

  <ExperienceBackground />

  <article class="p-14">
    <section
      class="flex flex-col justify-between items-center text-sm gap-2 bg-white/10 border-[1px] rounded-md max-h-fit p-4 z-50"
    >
      <div class="flex items-center gap-2 w-full">
        <Acroventus />
        <div class="flex flex-col items-center gap-2 md:flex-row">
          <span class="text-md text-white">Acroventus</span>
          <span class="text-xs text-white/70">2022 - 2024</span>
        </div>
      </div>

      <div>
        <p class="text-white">
          Desarrollo de una plataforma web para optimizar el emparejamiento
          entre clientes y abogados, y participación en la digitalización de una
          universidad mediante sistemas integrales para una gestión
          administrativa moderna.
        </p>
      </div>
    </section>
  </article>
</article>
