---
interface Props {
  link: string;
}

const { link } = Astro.props as Props;
---

<div class="relative group">
  <div
    class="transition-all translate-y-5 opacity-0 group-hover:translate-y-3 group-hover:opacity-100"
  >
    <div class="relative flex items-center group">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-arrow-up-right absolute w-4 h-4 transition-all opacity-0 group-hover:translate-x-1 group-hover:opacity-100"
        ><path d="M7 7h10v10"></path><path d="M7 17 17 7"></path></svg
      >
    </div>
  </div><a
    class="transition-all blur-0 grayscale-0 group-hover:opacity-20 group-hover:blur-sm sm:h-7"
    rel="noopener noreferrer"
    target="_blank"
    aria-label="Seguir en GitHub"
    :href={link}
    ><svg
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="white"
      class="w-6 h-6 stroke-[1.5px]"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244"
      ></path>
    </svg>
  </a>
</div>
