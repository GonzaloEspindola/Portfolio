---
import "@fontsource-variable/onest";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Soy Gonzalo Manuel Espindola, desarrollador web de Buenos Aires, Argentina, con experiencia en creación de aplicaciones web modernas y soluciones innovadoras. Explora mi portafolio para ver proyectos en JavaScript, Vue, Node.js y más. ¡Descubre cómo puedo ayudarte a transformar tus ideas en realidad!"
    />
    <meta
      name="keywords"
      content="Gonzalo Manuel Espindola, desarrollador web, JavaScript, Vue, Node.js, portafolio, aplicaciones web, Buenos Aires, Argentina, programador, desarrollador frontend, desarrollador backend"
    />
    <meta name="author" content="Gonzalo Manuel Espindola" />
    <meta name="publisher" content="Gonzalo Manuel Espindola" />
    <meta http-equiv="Content-Language" content="es" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/ico+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="pointer-events-none absolute h-screen object-cover">
      <img
        src="/assets/background.webp"
        alt="Background del sitio web"
        title="Background del sitio web"
        class="fixed h-screen w-screen object-cover opacity-10 blur-3xl"
      />
    </div>
    <svg
      class="pointer-events-none fixed isolate h-full w-full opacity-70 mix-blend-soft-light"
    >
      <filter id="noise">
        <feTurbulence
          type="fractalNoise"
          baseFrequency="0.8"
          numOctaves="4"
          stitchTiles="stitch"></feTurbulence>
      </filter>
      <rect width="100%" height="100%" filter="url(#noise)"></rect>
    </svg>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: "Onest Variable", sans-serif;
    background: #111111;
  }

  .mask {
    mask-image: linear-gradient(black 40%, transparent);
  }

  .card:before {
    background: linear-gradient(
        112.59deg,
        rgba(255, 255, 255, 0.05) 83.32%,
        rgba(255, 255, 255, 0.1) 94.31%
      ),
      linear-gradient(
        109.73deg,
        rgba(255, 255, 255, 0.1) 7.85%,
        rgba(255, 255, 255, 0.05) 19.46%
      );
    border-radius: inherit;
    content: "";
    inset: 0;
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask-composite: exclude;
    padding: 2px;
    pointer-events: none;
    position: absolute;
  }
</style>
